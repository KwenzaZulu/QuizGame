<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MenuController">
   <children>
      <ImageView pickOnBounds="true">
         <image>
            <Image url="@images/Sky%20background.jpg" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label alignment="TOP_CENTER" prefHeight="113.0" prefWidth="418.0" text="Quiz For You" textFill="#345e6f">
               <font>
                  <Font name="Bodoni MT Poster Compressed" size="96.0" />
               </font>
            </Label>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#handlePlay" prefHeight="25.0" prefWidth="221.0" style="-fx-border-radius: 25px;" text="Start Quiz" />
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#handleScore" prefHeight="25.0" prefWidth="221.0" text="Score and Progress" />
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#handleSettings" prefHeight="25.0" prefWidth="221.0" text="Settings" />
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#handleExit" prefHeight="25.0" prefWidth="221.0" text="Exit" />
         </children>
      </VBox>
   </children>
</StackPane>
